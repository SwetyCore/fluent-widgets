<Window x:Class="MyNewApp.FlyoutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyNewApp"
        LocationChanged="LocationChangedHandler"
        mc:Ignorable="d" AllowsTransparency="True"
        WindowStyle="None" ResizeMode="NoResize"
        xmlns:wpfui="clr-namespace:WPFUI.Controls;assembly=WPFUI"
        Background="#80FFFFFF"
        Title="FlyoutWindow" Height="450" Width="800" MouseLeftButtonDown="Window_MouseLeftButtonDown"
        xmlns:common="clr-namespace:WPFUI.Common;assembly=WPFUI"
        >

    <Window.Resources>
        <ContextMenu x:Key="cm">
            <MenuItem  Icon="{x:Static common:SymbolRegular.ClosedCaption24}" Click="MenuItem_Click" Header="暂时关闭">
            </MenuItem>
        </ContextMenu>
    </Window.Resources>
    <Grid x:Name="Container" ContextMenu="{StaticResource cm}">
        
    </Grid>
</Window>
